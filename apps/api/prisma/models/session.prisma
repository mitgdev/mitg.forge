/**
 * TODO: Maybe add user agent or device info in the future
 * to track from where the user is connecting and emit alerts
 * if a new device is used.
 */
model miforge_account_sessions {
  id         Int      @id @default(autoincrement())
  token      String   @unique @db.VarChar(512)
  expires_at DateTime

  ip       String?
  protocol String? // protocol used to connect in tibia server (15.0, 15.11, etc)

  accountId Int      @map("account_id") @db.UnsignedInt
  account   accounts @relation(fields: [accountId], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("miforge_account_sessions")
}
